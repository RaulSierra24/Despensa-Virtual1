@model IEnumerable<despensa.Models.PredidoFactura>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FecEmision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalVendido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCosto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodClienteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodEmpleadoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodEstadoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FecEmision)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalVendido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCosto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodClienteNavigation.CodUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodEmpleadoNavigation.CodUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodEstadoNavigation.CodEstado)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CodFactura">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CodFactura">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CodFactura">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<link rel="stylesheet" href="~/css/login.css">
<div class="contenedor-formularios" style="max-width: 100%;">
    <!-- Links de los formularios -->
    @if (@ViewBag.Error1 == 1)
    {
        <div class="alert alert-danger text-center">
            <strong>Las Contraseñas No Coinciden</strong>
        </div>

    }
    <ul class="contenedor-tabs">
        <li class="tab tab-segunda active"><a href="#iniciar-sesion">Iniciar Sesión</a></li>
        <li class="tab tab-primera"><a href="#registrarse">Registrarse</a></li>
    </ul>
    <!-- Contenido de los Formularios -->
    <div class="contenido-tab">
        <!-- Iniciar Sesion -->
        <div id="iniciar-sesion">
            <h1>Iniciar Sesión</h1>


        </div>

        <!-- Registrarse -->
        <div id="registrarse">
            <h1>Registrarse</h1>


        </div>
    </div>
</div>


@section Scripts {

    <script>
        $(document).ready(function () {
            $("form").each(function () { this.reset() });
        });
    </script>
    <script src="~/js/login.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
