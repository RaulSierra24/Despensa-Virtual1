@model despensa.Models.Marca

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="~/css/login.css">
<h2>Crear</h2>
<div class="contenedor-formularios">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="contenedor-input">
                    <label>
                        Marca <span class="req">*</span>
                    </label>
                    <input asp-for="Marca1" type="text" value="" autocomplete="off" readonly onfocus="this.removeAttribute('readonly');" required>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="button button-block" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {
            $("form").each(function () { this.reset() });
        });
    </script>
    <script src="~/js/login.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
