@model despensa.Models.Marca

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/login.css">

<h4>Marca:</h4>
<hr />
<div class="contenedor-formularios">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CodMarca" />
                <div class="contenedor-input">
                    <label>
                        Marca <span class="req">*</span>
                    </label>
                    <input asp-for="Marca1" type="text" value="" autocomplete="off" readonly onfocus="this.removeAttribute('readonly');" required>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="button button-block" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    <script>
            $(document).ready(function () {
                $("form").each(function () { this.reset() });
            });
    </script>
    <script src="~/js/login.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

